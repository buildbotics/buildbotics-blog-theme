{
  "name": "buildbotics",
  "description": "Buildbotics blog theme",
  "demo": "https://buildbotics.com/",
  "version": "0.0.1",
  "engines": {
    "ghost": ">=2.0.0",
    "ghost-api": "v2"
  },
  "license": "GPL",
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan .",
    "pretest": "gulp build"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "browserslist": ["last 2 versions"],
  "repository": {
    "type": "git",
    "url": "https://github.com/buildbotics/buildbotics-blog-theme.git"
  },
  "devDependencies": {
    "@tryghost/release-utils": "0.3.2",
    "beeper": "1.1.1",
    "gscan": "2.7.0",
    "gulp": "4.0.2",
    "gulp-livereload": "4.0.1",
    "gulp-stylus": "",
    "gulp-rename": "",
    "gulp-autoprefixer": "",
    "gulp-uglify": "3.0.2",
    "gulp-zip": "4.2.0",
    "pump": "3.0.0"
  },
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
